<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

	 <ImageView
	     android:id="@+id/home_text"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_centerHorizontal="true"
	     android:layout_centerVertical="false"
	     android:layout_marginTop="400dp"
	     android:background="@drawable/home_text"
	     android:scrollbars="none" />
	 
	  <ImageView
	      android:id="@+id/entrer"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_alignParentTop="false"
	      android:layout_below="@id/home_text"
	      android:layout_centerHorizontal="true"
	      android:layout_marginTop="100dp"
	      android:src="@drawable/home_participer" />
	  
	  	  <ImageView
	  	      android:id="@+id/footer"
	  	      android:layout_width="fill_parent"
	  	      android:layout_height="500dp"
	  	      android:layout_alignParentBottom="false"
	  	      android:layout_below="@id/entrer"
	  	      android:layout_marginTop="382dp"
	  	      android:baselineAlignBottom="true"
	  	      android:src="@drawable/home_footer" />

</RelativeLayout>