<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/bravo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:layout_marginTop="400dp"
        android:text="Bravo "
        android:textColor="#e21f84"
        android:textSize="32sp"
        android:textStyle="bold" />
    
<TextView
    android:id="@+id/home_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="false"
    android:layout_below="@id/bravo"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="false"
    android:layout_centerVertical="false"
    android:layout_marginTop="10dp"
    android:text="Votre inscription au “KIABI FAN SELECTION” est validée :"
    android:textColor="#000"
    android:textSize="22sp"
    android:textStyle="bold" />

<TextView
    android:id="@+id/home_text_2"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="false"
    android:layout_below="@id/home_text"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="false"
    android:textColor="#000"
    android:layout_centerVertical="false"
    android:layout_marginTop="10dp"
    android:text="Vous etes désormais inscrit au tirage au sort pour gagner un chéque cadeau de 200 € !"
    android:textSize="20sp" />
	  
	  <ImageView
	      android:id="@+id/share"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_alignParentBottom="false"
	      android:layout_below="@id/home_text_2"
	      android:layout_centerHorizontal="true"
	      android:layout_marginTop="100dp"
	      android:src="@drawable/share" />
	
	<TableRow
	    android:id="@+id/_conteur"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/share"
	    android:layout_centerHorizontal="true"
	    android:layout_centerVertical="false"
	    android:layout_marginTop="75dp"
	    android:orientation="vertical" >
	 
	    	  <TextView
	    	      android:id="@+id/txt_conteur"
	    	      android:layout_width="wrap_content"
	    	      android:layout_height="wrap_content"
	    	      android:layout_below="@id/share"
	    	      android:layout_marginLeft="50dp"
	    	      android:layout_marginTop="60dp"
	    	      android:text="Vous allez être automatiquement déconnecté(e) dans "
	    	      android:textColor="#000"
	    	      android:textSize="22sp"
	    	      android:textStyle="bold" />
	  
	  <TextView
	      android:id="@+id/tictac"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_marginRight="50dp"
	      android:layout_marginTop="60dp"
	      android:text="15 Secondes"
	      android:textColor="#000"
	      android:textSize="22sp"
	      android:textStyle="bold" />	      	      
</TableRow>
	 
	  <ImageView
	      android:id="@+id/user_icone"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_alignParentBottom="false"
	      android:layout_below="@id/_conteur"
	      android:layout_centerHorizontal="false"
	      android:layout_centerInParent="true"
	      android:layout_marginTop="50dp"
	      android:src="@drawable/user_icon" />
	  
	  	  <ImageView
	  	      android:id="@+id/deconnecter"
	  	      android:layout_width="wrap_content"
	  	      android:layout_height="wrap_content"
	  	      android:layout_alignParentBottom="false"
	  	      android:layout_below="@id/user_icone"
	  	      android:layout_centerHorizontal="false"
	  	      android:layout_centerInParent="true"
	  	      android:layout_marginTop="50dp"
	  	      android:src="@drawable/deconnect_button" />

</RelativeLayout>